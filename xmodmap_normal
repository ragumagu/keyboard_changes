!This clears the modifiers
clear Control
clear Shift
clear Lock
clear Mod3
clear Mod4
!This allows top-left escape key to toggle Caps_Lock when Shift+Escape is pressed
keycode 9 = Escape Caps_Lock Escape

!This changes the caps lock key into a control key.
keycode 66 = Control_L
add Control = Control_L

!This adds the left and right shift keys

 keycode 50 = Shift_L NoSymbol Shift_L
 keycode 62 = Shift_R NoSymbol Shift_R
 add Shift = Shift_L Shift_R
 
 !This adds the left and right control keys
 
 keycode 37 = Control_L NoSymbol Control_L
 keycode 105 = Control_R NoSymbol Control_R
 add Control = Control_L Control_R
 
 !This adds the left and right super keys
 keycode 133 = Super_L
 keycode 134 = Super_R
 add Mod3 = Super_L Super_R

!This converts space bar into a hyper_L = control key
keycode 65 = Hyper_L
remove mod4 = Hyper_L
add Control = Hyper_L
keycode any = space

!moving keys around (or not)
keycode 18 = 9 parenleft 9 parenleft
keycode 19 = 0 parenright 0 parenright 
keycode 20 = minus underscore minus underscore
keycode 21 = equal plus equal plus 
keycode 34 = bracketleft braceleft bracketleft braceleft 
keycode 35 = bracketright braceright bracketright braceright
keycode 48 = apostrophe quotedbl apostrophe quotedbl
keycode 50 = Shift_L NoSymbol Shift_L 
keycode 51 = backslash bar backslash bar
keycode 59 = comma less comma less
keycode 60 = period greater period greater
keycode 61 = slash question slash question
keycode 23 = Tab ISO_Left_Tab Tab ISO_Left_Tab
keycode 22 = BackSpace BackSpace BackSpace BackSpace
keycode 37 = Control_L NoSymbol Control_L
